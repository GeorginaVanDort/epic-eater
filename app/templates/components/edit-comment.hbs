  <h3>Edit Comment</h3>
    <form>
      <div class="form-group">
        <label for="name" class="body">Commenter Name:</label>
          {{input value=comment.name id="name"}}
      </div>
      <div class="form-group">
        <label for="date" class="body">Date:</label>
        {{input value=comment.date id="date" type="date"}}
      </div>
      <div class="form-group">
        {{textarea rows="6" cols="60" value=comment.text id="text" placeholder="Comments"}}
      </div>
      <button class="btn" {{action 'updateComment' comment}}{{action 'hideEditComment'}}>Save Changes</button>
    </form>
